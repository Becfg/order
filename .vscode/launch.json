    "version": "0.2.0",
    "configurations": [
        {
            "type": "bun",
            "request": "launch",
            "name": "Debug File",
            "program": "${file}",
            "cwd": "${workspaceFolder}/backEnd/bun",
            "stopOnEntry": false,
            "watchMode": false,
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "bun",
            "request": "launch",
            "name": "Run File",
            "program": "${file}",
            "cwd": "${workspaceFolder}/backEnd/bun",
            "noDebug": true,
            "watchMode": false,
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "bun",
            "request": "attach",
            "name": "Attach Bun",
            "url": "ws://localhost:6499/",
            "stopOnEntry": false,
            "internalConsoleOptions": "neverOpen"
        }
    ]
}